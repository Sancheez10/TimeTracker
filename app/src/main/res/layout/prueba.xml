<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="Introduce tu nombre"
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Introduce tu apellido"
        android:id="@+id/inputApellido"
        android:layout_below="@id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Introduce tu email"
        android:id="@+id/inputEmail"
        android:layout_below="@id/inputApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Introduce tu poblacion"
        android:id="@+id/inputPoblacio"
        android:layout_below="@id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Introduce tu id"
        android:id="@+id/inputId"
        android:layout_below="@id/inputPoblacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Send"
        android:id="@+id/btn"
        android:layout_below="@+id/inputId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Read"
        android:id="@+id/btnRead"
        android:layout_below="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Nothing to show"
        android:id="@+id/tvRead"
        android:layout_below="@id/btnRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>